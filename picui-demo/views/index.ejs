				testImgs.push("http://scranton.mylittlefacewhen.com/media/f/img/mlfw5003-tumblr_lk6wz3tbxg1qaha6c.png");
				testImgs.push("http://scranton.mylittlefacewhen.com/media/f/img/mlfw4822-13369295685608.png");

				//holy test trinity
